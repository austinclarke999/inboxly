    <style>
        .sync-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(15, 23, 42, 0.7);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 9999;
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .sync-overlay.active {
            opacity: 1;
            pointer-events: all;
        }

        .sync-content {
            text-align: center;
            background: rgba(30, 41, 59, 0.9);
            padding: 3rem;
            border-radius: 24px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
            transform: translateY(20px);
            transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            max-width: 400px;
            width: 90%;
        }

        .sync-overlay.active .sync-content {
            transform: translateY(0);
        }

        .sync-spinner-container {
            position: relative;
            width: 80px;
            height: 80px;
            margin: 0 auto 1.5rem;
        }

        .sync-spinner {
            animation: rotate 2s linear infinite;
            width: 100%;
            height: 100%;
        }

        .sync-spinner .path {
            stroke: #38bdf8;
            stroke-linecap: round;
            animation: dash 1.5s ease-in-out infinite;
        }

        .sync-icon {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: #fff;
            width: 32px;
            height: 32px;
        }

        .sync-title {
            color: #fff;
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .sync-status {
            color: #94a3b8;
            font-size: 1rem;
        }

        @keyframes rotate {
            100% {
                transform: rotate(360deg);
            }
        }

        @keyframes dash {
            0% {
                stroke-dasharray: 1, 150;
                stroke-dashoffset: 0;
            }

            50% {
                stroke-dasharray: 90, 150;
                stroke-dashoffset: -35;
            }

            100% {
                stroke-dasharray: 90, 150;
                stroke-dashoffset: -124;
            }
        }
    </style>

    <script src="./api.js"></script>
    <script>
        // Check authentication on page load
        window.addEventListener('DOMContentLoaded', async () => {
            // Require authentication
            requireAuth();

            try {
                // Load user information
                const user = await getCurrentUser();

                // Update user info in header
                const userNameEl = document.querySelector('.user-info p:first-child');
                const userEmailEl = document.querySelector('.user-info p:last-child');

                if (userNameEl && user.name) {
                    userNameEl.textContent = user.name;
                }
                if (userEmailEl && user.email) {
                    userEmailEl.textContent = user.email;
                }

                // Don't auto-sync - let user click the button when ready
                console.log('Dashboard loaded. Click "Sync Now" to sync your emails.');
            } catch (error) {
                console.error('Failed to load user info:', error);
                // Don't show error alert on load, just log it
            }
        });

        // Sync emails function
        async function handleSyncEmails() {
            const overlay = document.getElementById('syncOverlay');
            const statusText = overlay.querySelector('.sync-status');
            const syncTitle = overlay.querySelector('.sync-title');
            
            try {
                // Show overlay
                overlay.classList.add('active');
                syncTitle.textContent = 'Syncing with Gmail';
                statusText.textContent = 'Connecting to Gmail...';
                statusText.style.color = '#94a3b8';
                
                // Step 1: Syncing
                const result = await syncEmails();
                
                // Step 2: Analyzing (simulated delay for effect if sync is too fast)
                statusText.textContent = 'AI is categorizing your emails...';
                await new Promise(resolve => setTimeout(resolve, 1500));
                
                // Step 3: Success
                syncTitle.textContent = 'Sync Complete!';
                statusText.textContent = 'Updating dashboard...';
                statusText.style.color = '#4ade80';
                
                console.log('Sync result:', result);

                // Reload the page to show updated stats
                setTimeout(() => {
                    window.location.reload();
                }, 1000);
            } catch (error) {
                console.error('Sync error:', error);
                
                // Show error in overlay instead of alert
                syncTitle.textContent = 'Sync Failed';
                syncTitle.style.color = '#f87171';
                statusText.textContent = error.message || 'Please try reconnecting your Gmail account';
                statusText.style.color = '#fca5a5';
                
                // Hide overlay after 3 seconds
                setTimeout(() => {
                    overlay.classList.remove('active');
                }, 3000);
            }
        }
    </script>
