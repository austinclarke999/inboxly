// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  name          String?
  googleId      String?  @unique
  accessToken   String?  @db.Text  // Encrypted OAuth access token
  refreshToken  String?  @db.Text  // Encrypted OAuth refresh token
  tokenExpiry   DateTime?            // When access token expires
  lastSyncedAt  DateTime?            // Last successful email sync
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  emails        Email[]
  subscriptions Subscription[]
  rules         AutomationRule[]
  settings      UserSettings?
  unsubscribeAttempts UnsubscribeAttempt[]
}

model Email {
  id              String   @id @default(uuid())
  userId          String
  messageId       String   @unique
  threadId        String?
  subject         String?
  from            String
  to              String?
  body            String?  @db.Text
  snippet         String?
  receivedAt      DateTime
  
  // AI-generated fields
  category        String?
  noiseScore      Int?     // 0-100
  importanceScore Int?     // 0-100
  isNewsletter    Boolean  @default(false)
  isPromo         Boolean  @default(false)
  hasUnsubscribe  Boolean  @default(false)
  unsubscribeLink String?
  
  // Gemini analysis
  geminiAnalysis  Json?
  summary         String?  @db.Text
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([category])
  @@index([receivedAt])
}

model Subscription {
  id              String   @id @default(uuid())
  userId          String
  senderEmail     String
  senderName      String?
  frequency       String?  // Daily, Weekly, Monthly, etc.
  lastEmailAt     DateTime?
  emailCount      Int      @default(0)
  
  // Billing info (extracted by Gemini)
  isBilling       Boolean  @default(false)
  amount          Float?
  currency        String?
  billingCycle    String?  // monthly, yearly, etc.
  nextBillingDate DateTime?
  autoRenew       Boolean  @default(false)
  
  // User actions
  isUnsubscribed  Boolean  @default(false)
  unsubscribedAt  DateTime?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, senderEmail])
  @@index([userId])
}

model AutomationRule {
  id          String   @id @default(uuid())
  userId      String
  name        String
  description String?
  
  // Rule conditions (stored as JSON)
  conditions  Json
  
  // Actions to take
  action      String   // unsubscribe, archive, delete, mark_important, etc.
  
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
}

model UnsubscribeAttempt {
  id              String   @id @default(uuid())
  userId          String
  subscriptionId  String?
  senderEmail     String
  method          String   // mailto, http_get, http_post, one_click
  unsubscribeUrl  String?  @db.Text
  status          String   // pending, success, failed, requires_manual
  errorMessage    String?  @db.Text
  attemptedAt     DateTime @default(now())
  completedAt     DateTime?
  
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([status])
}

model UserSettings {
  id                    String   @id @default(uuid())
  userId                String   @unique
  
  // Privacy settings
  geminiLocalMode       Boolean  @default(false)
  
  // Notification preferences
  dailyDigest           Boolean  @default(true)
  weeklyDigest          Boolean  @default(true)
  
  // Inbox health tracking
  inboxHealthScore      Int      @default(0)
  emailsProcessed       Int      @default(0)
  subscriptionsRemoved  Int      @default(0)
  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
